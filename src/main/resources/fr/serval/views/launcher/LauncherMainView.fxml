<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.serval.launcher.ihm.LauncherMainController">
   <children>
      <Button id="start_app" fx:id="launcherLaunchApp" layoutX="231.0" layoutY="162.0" mnemonicParsing="false" onAction="#handleLaunchApp" prefHeight="38.0" prefWidth="138.0" text="Démarrer" />
      <Button id="manage_plugins" fx:id="launcherManagePlugins" layoutX="231.0" layoutY="206.0" mnemonicParsing="false" onAction="#handleManagePlugins" prefHeight="38.0" prefWidth="138.0" text="Gérer les plugins" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS" />
      <Button id="exit_app" fx:id="launcherClose" layoutX="231.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleClose" prefHeight="38.0" prefWidth="138.0" text="Quitter" />
      <Label layoutX="10.0" layoutY="351.0" text="Status Github : Déconnecté" />
      <ImageView fitHeight="114.0" fitWidth="580.0" layoutX="100.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/title.png" />
         </image>
      </ImageView>
      <Button fx:id="launcherConnexion" layoutX="10.0" layoutY="367.0" mnemonicParsing="false" onAction="#handleConnexion" text="Renseigner un token" />
   </children>
</AnchorPane>
